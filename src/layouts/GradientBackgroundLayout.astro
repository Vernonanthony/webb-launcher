---
import Layout from "./Layout.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;

const version = import.meta.env.APP_VERSION ?? process.env.APP_VERSION;
---

<Layout title={title}>
  <div id="wrapper" class="min-h-screen min-w-fit
    bg-gradient-to-tr from-cyan-400 to-fuchsia-600
    flex flex-col
  ">
    <main class="flex-1">
      <slot></slot>
    </main>
    <footer class="frosted-glass p-2">
      <p class="text-right">Webb launcher {version} - built with {Astro.generator} - Â©2022 snyssen -
        <a href="https://git.snyssen.be/snyssen/webb-launcher" class="underline hover:text-blue-600 focus:z-10 focus:outline-none focus:ring-2 focus:ring-blue-600 dark:hover:text-blue-600">Source</a>
      </p>
    </footer>
  </div>
</Layout>
