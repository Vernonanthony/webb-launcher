---
export interface Props {
  title: string;
  icon_classes?: string;
}

const {title, icon_classes} = Astro.props;
---
<details class="flex flex-col justify-center items-center">
  <summary class="cursor-pointer text-center py-3 px-4
  hover:text-blue-600 focus:z-10 focus:outline-none focus:ring-2 focus:ring-blue-600 dark:hover:text-blue-600
  ">
    {title}
    {icon_classes && <i class={icon_classes}></i>}
  </summary>
  <slot></slot>
</details>
