---
import type { Shortcut } from '../models/Shortcut';

export interface Props {
  shortcut: Shortcut;
}

const { shortcut } = Astro.props;

---
<div class="flex flex-col
  min-w-fit flex-grow
  frosted-glass rounded-xl
">
  <div class="w-full bg-gray-100/60 dark:bg-slate-800/60 rounded-t-xl p-2 md:p-4">
    <p class="mt-1 text-lg md:text-xl font-bold text-center">
      {shortcut.icon_classes && <i class={shortcut.icon_classes}></i>}
      {shortcut.name}
    </p>
  </div>
  <div class="p-4 md:p-5 flex flex-col divide-y divide-gray-200 dark:divide-gray-700">
    {(shortcut.children as Shortcut[]).map(sh => ( // TODO: Allow shortcuts to have children
      <a href={sh.url} class="inline-flex justify-center items-center gap-x-2 py-3 px-4 text-sm font-medium text-center
      hover:text-blue-600 focus:z-10 focus:outline-none focus:ring-2 focus:ring-blue-600 dark:hover:text-blue-600">
        {sh.icon_classes && <i class={sh.icon_classes}></i>}
        {sh.url}
      </a>
    ))}
  </div>
</div>
